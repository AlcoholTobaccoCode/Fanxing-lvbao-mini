<template>
	<cl-page>
		<template v-if="loading">
			<view class="w-full h-full flex items-center justify-center gap-4">
				<cl-loading :size="36"></cl-loading>
				<cl-text>加载中...</cl-text>
			</view>
		</template>
		<template v-else>
			<scroll-view scroll-y class="h-full">
				<view class="p-6 pb-20" v-if="nodes">
					<rich-text :nodes="nodes"></rich-text>
					<cl-button @click="router.back()" class="mt-4">返回</cl-button>
				</view>
				<PrivacyPolicyStatic v-else></PrivacyPolicyStatic>
			</scroll-view>
		</template>
	</cl-page>
</template>

<script setup lang="ts">
import { router } from "@/cool";
import { ref, onMounted } from "vue";
import { GetDictByKey } from "@/api/dict";
import { to, sleepWait } from "@/utils";

import PrivacyPolicyStatic from "./privacy-policy-static.uvue";

const nodes = ref("");
const loading = ref(true);

const getPrivacyPolicyStatic = async () => {
	loading.value = true;
	const [error, res] = await to(GetDictByKey("dict:privacy_policy"));
	await sleepWait(500);
	loading.value = false;
	if (error || !res) {
		return;
	}
	if (res) {
		nodes.value = res.name;
	}
};

onMounted(async () => {
	getPrivacyPolicyStatic();
});
</script>
